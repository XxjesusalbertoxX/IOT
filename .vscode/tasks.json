{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PIO: Build",
            "type": "shell",
            "command": "pio",
            "args": ["run"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "PIO: Upload",
            "type": "shell", 
            "command": "pio",
            "args": ["run", "--target", "upload"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "PIO: Monitor",
            "type": "shell",
            "command": "pio",
            "args": ["device", "monitor", "-b", "115200"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true
        },
        {
            "label": "PIO: Upload & Monitor",
            "dependsOrder": "sequence",
            "dependsOn": ["PIO: Upload", "PIO: Monitor"],
            "group": "build"
        },
        {
            "label": "PIO: Clean",
            "type": "shell",
            "command": "pio",
            "args": ["run", "--target", "clean"],
            "group": "build"
        }
    ]
}